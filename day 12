##Length of String 

#include<bits/stdc++.h>
using namespace std;
int main(){
	
	char name[20];
	cout<<"Enter the name: "<<endl;
	cin>>name;
	cout<<"You Enter the name is: "<<name<<endl;

	int i=0;
	int count =0;
	while(name[i]!='\0'){
		count++;
		i++;
	}

cout<<"The size of the name is: "<<count;
	return 0;
}
